---
import WebShowcase from './WebShowcase.astro';
const { imgSrc, imgAlt } = Astro.props;

---

<div class="grow grid grid-cols-3 w-full">
    <div class="flex flex-col items-center justify-center py-[32px] lg:py-[60px] col-span-3 lg:col-span-1">
        <slot></slot>
    </div>
    <div class="p-[20px] lg:p-[32px] rounded-l-full bg-[#FFF] col-span-3 lg:col-span-2 animate-on-scroll">
        <div class="animated-object">
            <WebShowcase imgSrc={imgSrc} imgAlt={imgAlt} >
        </div>
    </div>
</div>
<style scoped>
    .animate-on-scroll .animated-object {
        transition: opacity 0.3s ease-in-out;
        opacity: 0;
    }
    .animate-on-scroll.animate .animated-object {
        opacity: 1;
    }
</style>